@if(TempData["success"] != null){
	<script type="text/javascript">
		toastr.success('@TempData["success"]','', {
					positionClass: 'toast-top-right',
					closeButton: false,
					progressBar: true,
					newestOnTop: true,
					rtl: $("body").attr("dir") === "rtl" || $("html").attr("dir") === "rtl",
					timeOut: 3000
				});
	</script>
}
