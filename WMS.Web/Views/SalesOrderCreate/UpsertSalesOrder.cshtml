@model SalesOrderCreateViewModel

@if (Model.outSalesOrder != null)
{
    <input asp-for="outSalesOrder.OrderId" hidden/>
}
else
{
    <input asp-for="outSalesOrder.OrderId" value="@SD.AutoGenerated" hidden/>
}

<div class="form-group required mb-3">
    <label class="control-label">Tenant</label>
    <select asp-for="outSalesOrder.TenantId" class="form-control page1 select2" data-bs-toggle="select2" asp-items="ViewBag.TenantId">
    </select>
    <span asp-validation-for="outSalesOrder.TenantId" class="text-danger"></span>
</div>

<div class="row">
    <div class="col-12 col-sm-6">
        <div class="form-group required mb-3">
            <label class="control-label">Sales Type</label>
            <select asp-for="outSalesOrder.OrdSalesType" class="form-control page1 select2" data-bs-toggle="select2" asp-items="ViewBag.OrdSalesType">
                <option selected disabled value="">Select...</option>
            </select>
            <span asp-validation-for="outSalesOrder.OrdSalesType" class="text-danger"></span>
        </div>
    </div>
    <div class="col-12 col-sm-6">
        <div class="form-group required mb-3">
            <label class="control-label">Warehouse</label>
            <select asp-for="outSalesOrder.HouseCode" class="form-control page1 select2" data-bs-toggle="select2" asp-items="ViewBag.HouseCode" required>
                <option selected disabled value="">Select...</option>
            </select>
            <span asp-validation-for="outSalesOrder.HouseCode" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 col-sm-6">
        <div class="form-group required mb-3">
            <label class="control-label">Platform</label>
            <select asp-for="outSalesOrder.PlatformId" class="form-control page1 select2" data-bs-toggle="select2" asp-items="ViewBag.OrdPlatform">
                <option selected disabled value="">Select...</option>
            </select>
            <span asp-validation-for="outSalesOrder.PlatformId" class="text-danger"></span>
        </div>
    </div>
    <div class="col-12 col-sm-6">
        <div class="form-group required mb-3">
            <label class="control-label">Store</label>
            <select asp-for="outSalesOrder.StoreId" class="form-control page1 select2" data-bs-toggle="select2" asp-items="ViewBag.StoreId" required>
                <option selected disabled value="">Select...</option>
            </select>
            <span asp-validation-for="outSalesOrder.StoreId" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="form-group text-end">
    @if (Model.outSalesOrder != null)
    {
        <button type="button" class="btn btn-primary" id="btn-updatesalesorder">Update</button>
    }
    else
    {
        <button type="submit" class="btn btn-primary">Next</button>
    }
</div>