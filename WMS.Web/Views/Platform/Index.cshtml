@model IEnumerable<MasPlatform>

@{
    ViewData["Title"] = "Platform";
    ViewData["MenuKey"] = "Operasional";
}

<div class="card" style="min-height:700px">
    <div class="card-header border-bottom">
        <div class="d-flex align-items-center py-1">
            <div class="flex-grow-1 ps-3">
                <h5 class="card-title"><strong>Platform List</strong></h5>
            </div>
            <div>
                <button type="button" class="btn btn-outline-primary btn-pill btn-upsert" data-platformid="@SD.AutoGenerated" data-bs-toggle="modal" data-bs-target="#ModalUpsert">Add Platform</button>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr class="text-center">
                        <th>
                            Action
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Code
                        </th>
                        <th>
                            Status
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-outline-tertiary" data-bs-toggle="dropdown"><i class="fas fa-fw fa-ellipsis-h"></i></button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item btn-upsert" data-bs-toggle="modal" data-bs-target="#ModalUpsert"
                                        data-platformid="@item.PlatformId"
                                        data-code="@item.Code"
                                        data-name="@item.Name"
                                        data-flag="@item.Flag">Edit</a></li>
                                    </ul>
                                </div>
                            </td>
                            <td>
                                @item.Code
                            </td>
                            <td>
                                @item.Name
                            </td>
                            <td class="text-center">
                                @item.Flag
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<partial name="ModalUpsert" />

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function () {
            $('.table').DataTable({
            });
        });

        $('.btn-upsert').on('click', function () {
            if ($(this).data('platformid') == "@SD.AutoGenerated") {
                $('input[name="PlatformId"]').val("");
                $('input[name="Code"]').val("");
                $('input[name="Name"]').val("");
                $('select[name="Flag"]').val("@FlagEnum.Active").change();
            }
            else {
                $('input[name="PlatformId"]').val($(this).data('platformid'));
                $('input[name="Code"]').val($(this).data('code'));
                $('input[name="Name"]').val($(this).data('name'));
                $('select[name="Flag"]').val($(this).data('flag')).change();
            }
        });
    </script>
}
