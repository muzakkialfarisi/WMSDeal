@model IEnumerable<MasDirectorate>

@{
    ViewData["Title"] = "Directorate";
    ViewData["MenuKey"] = "Operasional";
}

<div class="card" style="min-height:700px">
    <div class="card-header border-bottom">
        <div class="d-flex align-items-center py-1">
            <div class="flex-grow-1 ps-3">
                <h5 class="card-title"><strong>Directorate List</strong></h5>
            </div>
            <div>
                <button class="btn btn-outline-primary btn-pill btn-upsert" data-dircode="@SD.AutoGenerated" data-bs-toggle="modal" data-bs-target="#ModalUpsert">Add Directorate</button>
            </div>
        </div>
    </div>
    <div class="card-body">

        <div class="table-responsive">

            <table class="table table-striped">
                <thead>
                    <tr class="text-center">
                        <th>
                            Action
                        </th>
                        <th>
                            Code
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Division
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-outline-primary" data-bs-toggle="dropdown"><i class="fas fa-fw fa-ellipsis-h"></i></button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-action="Detail" asp-route-DirCode="@item.DirCode">Details</a>
                                        </li>
                                        <li>
                                            <button class="dropdown-item btn-upsert"
                                                data-dircode="@item.DirCode"
                                                data-dirname="@item.DirName"
                                                data-bs-toggle="modal" data-bs-target="#ModalUpsert">
                                                Edit
                                            </button>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DirCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DirName)
                            </td>
                            <td class="text-center">
                                @item.MasDivisions.Count
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

<partial name="ModalUpsert" />

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function () {
            $('.table').DataTable({
            });
        });

        $('.btn-upsert').on('click', function () {
            if ($(this).data('dircode') == "@SD.AutoGenerated") {
                $('input[name="DirCode"]').val("");
                $('input[name="DirName"]').val("");
            }
            else {
                $('input[name="DirCode"]').val($(this).data('dircode'));
                $('input[name="DirName"]').val($(this).data('dirname'));
            }
        });
    </script>
}