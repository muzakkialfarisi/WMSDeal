@model IEnumerable<SecProfile>

@{
    ViewData["Title"] = "Profiles";
    ViewData["MenuKey"] = "Security";
}

<div class="card" style="min-height:700px">
    <div class="card-header border-bottom">
        <div class="d-flex align-items-center py-1">
            <div class="flex-grow-1 ps-3">
                <h5 class="card-title"><strong>Profile List</strong></h5>
            </div>
            <div>
                <button type="button" class="btn btn-outline-primary btn-pill btn-upsert" data-profileid="@SD.AutoGenerated" data-bs-toggle="modal" data-bs-target="#ModalUpsert">Add Profile</button>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr class="text-center">
                    <th >
                        Action
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProfileId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProfileName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateCreated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedBy)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.Flag)
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <div class="input-group">
                                <button type="button" class="btn btn-outline-tertiary" data-bs-toggle="dropdown"><i class="fas fa-fw fa-ellipsis-h"></i></button>
                                <div class="dropdown-menu">
                                    <button class="dropdown-item btn-upsert" data-bs-toggle="modal" data-bs-target="#ModalUpsert"
                                        data-profileid="@item.ProfileId"
                                        data-profilename="@item.ProfileName"
                                        data-description="@item.Description"
                                        data-flag="@item.Flag">
                                        Edit
                                    </button>
                                    <a asp-route-ProfileId="@item.ProfileId" asp-action="Manage" class="btn dropdown-item">Manage</a>
                                </div>
                            </div>
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.ProfileId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProfileName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.DateCreated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedBy)
                        </td>
                        <td class="text-center">
                            @if (item.Flag == FlagEnum.Active)
                            {
                                <span class="badge bg-success"> @Html.DisplayFor(modelItem => item.Flag)</span>
                            }
                            else
                            {
                                <span class="badge bg-danger"> @Html.DisplayFor(modelItem => item.Flag)</span>
                            }
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<partial name="ModalUpsert" />

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function () {
            $('.table').DataTable({
            });
        });

        $('.btn-upsert').on('click', function () {
            if ($(this).data('profileid') == "@SD.AutoGenerated") {
                $('input[name="ProfileId"]').val("");
                $('input[name="ProfileName"]').val("");
                $('input[name="Description"]').val("");
                $('select[name="Flag"]').val("1").change();
            }
            else {
                $('input[name="ProfileId"]').val($(this).data('profileid'));
                $('input[name="ProfileName"]').val($(this).data('profilename'));
                $('input[name="Description"]').val($(this).data('description'));
                $('select[name="Flag"]').val("1").change();
            }
        });
    </script>
}