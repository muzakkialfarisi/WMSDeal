@model IEnumerable<InvStorageSize>

@{
    ViewData["Title"] = "Storage Size";
    ViewData["MenuKey"] = "Storage";
}

<div class="row">
    <div class="col-12">
        <div class="card" style="min-height:700px">
            <div class="card-header border-bottom">
                <div class="d-flex align-items-center py-1">
                    <div class="flex-grow-1 ps-3">
                        <h5 class="card-title"><strong>List of Storage Size</strong></h5>
                    </div>
                    <div>
                         <a class="btn btn-outline-primary btn-pill"asp-action="Create" >Add Storage Size</a>
                    </div>
                </div>
            </div><br />
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.SizeCode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SizeName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.InvStorageBesaran)
                            </th>
                            <th>
                                P x L (CM)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.InvStorageTebal)
                            </th>
                             <th>
                                T (CM)
                            </th>
                            @*<th>Action</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SizeCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SizeName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InvStorageBesaran.Code)
                                </td>
                                 <td>
                                    @Html.DisplayFor(modelItem => item.InvStorageBesaran.MaxPanjang) x 
                                    @Html.DisplayFor(modelItem => item.InvStorageBesaran.MaxLebar)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InvStorageTebal.Code)
                                </td>
                                 <td>
                                    @Html.DisplayFor(modelItem => item.InvStorageTebal.MaxTinggi)
                                </td>
                                @*<td>*@
                                    @*<a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.SizeCode"><i class="fas fa-pencil-alt"></i></a>*@
                                    @*<a asp-action="Details" class="btn btn-info" asp-route-id="@item.PackagingId"><i class="fas fa-info-circle"></i></a>*@
                                    @*<a asp-action="Delete" class="btn btn-danger delete" asp-route-id="@item.LevelId"><i class="fas fa-trash-alt"></i></a>*@
                                    @*<button data-id="@item.Id" class="btn btn-danger deleteBtn" type="button"><i class="fas fa-trash-alt"></i></button>*@
                                @*</td>*@
                            </tr>
                        }
                    </tbody>
                </table>
                <form id="deleteFrom" asp-action="Delete">
                    <input type="hidden" id="LevelId" name="Id" />
                </form>
                @section Scripts{
                <script>
                    $(function(){
                         $('.table').DataTable({
                            responsive:true,

                            fixedHeader: true
                        });
                        $('.deleteBtn').click(function(e){
                            swal({
                                title:"Are you sure?",
                                text:"Are you sure you want to delete this record?",
                                icon:"warning",
                                buttons:true,
                                dangerMode:true
                            }).then((confirm) =>{
                                if(confirm){
                                    var btn=$(this);
                                    var id=btn.data("id");
                                    $('#LevelId').val(id);
                                    $('#deleteFrom').submit();
                                }
                            });
                        });
                    });
                </script>
                }

            </div>
        </div>
    </div>
</div>

