@model MasDivision

@{
    ViewData["Title"] = "Division";
    ViewData["MenuKey"] = "Operasional";
}

<div class="row">
    <div class="col-12 col-md-4 col-sm-4">
        <partial name="DetailDivision" />
    </div>
    <div class="col-12 col-md-8 col-sm-8">
        <partial name="DetailDivisionJabatan">
    </div>
</div>

<partial name="ModalUpsertJabatan">

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function () {
            $('.tbl-jabatan').DataTable({
            });
        });

        $('.btn-upsert').on('click', function () {
            if ($(this).data('jobposid') == "@SD.AutoGenerated") {
                $('input[name="JobPosId"]').val("");
                $('input[name="JobPosCode"]').val("");
                $('input[name="JobPosName"]').val("");
                $('input[name="Flag"]').val("@FlagEnum.Active").change();
            }
            else {
                $('input[name="JobPosId"]').val($(this).data('jobposid'));
                $('input[name="JobPosCode"]').val($(this).data('jobposcode'));
                $('input[name="JobPosName"]').val($(this).data('jobposname'));
                $('input[name="Flag"]').val($(this).data('flag')).change();
            }
        });
    </script>
}
