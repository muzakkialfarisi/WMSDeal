@model MasDivision

<div class="card">
    <div class="card-header border-bottom">
        <div class="d-flex align-items-center py-1">
            <div class="flex-grow-1 ps-3">
                <h5 class="card-title"><strong>Jabatan List</strong></h5>
            </div>
            <div>
                <button class="btn btn-outline-primary btn-pill btn-upsert" data-jobpostid="@SD.AutoGenerated" data-bs-toggle="modal" data-bs-target="#ModalUpsert">Add Jabatan</button>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">

            <table class="table table-striped tbl-jabatan">
                <thead>
                    <tr class="text-center">
                        <th>
                            Action
                        </th>
                        <th>
                            Code
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Status
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.MasJabatans)
                    {
                        <tr>
                            <td class="text-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="dropdown"><i class="fas fa-fw fa-ellipsis-h"></i></button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <button class="dropdown-item btn-upsert"
                                                data-jobposid="@item.JobPosId"
                                                data-jobposcode="@item.JobPosCode"
                                                data-jobposname="@item.JobPosName"
                                                data-flag="@item.Flag"
                                                data-bs-toggle="modal" data-bs-target="#ModalUpsert">
                                                Edit
                                            </button>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.JobPosCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.JobPosName)
                            </td>
                            <td class="text-center">
                                @if (item.Flag == FlagEnum.Active)
                                {
                                    <span class="badge bg-success"> @Html.DisplayFor(modelItem => item.Flag)</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger"> @Html.DisplayFor(modelItem => item.Flag)</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>