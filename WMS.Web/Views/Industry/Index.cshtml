@model IEnumerable<MasIndustry>

@{
    ViewData["Title"] = "Industry";
    ViewData["MenuKey"] = "Operasional";
}

<div class="card" style="min-height:700px">
    <div class="card-header border-bottom">
        <div class="d-flex align-items-center py-1">
            <div class="flex-grow-1 ps-3">
                <h5 class="card-title"><strong>Industry List</strong></h5>
            </div>
            <div>
                <button class="btn btn-outline-primary btn-pill btn-upsert" data-id="@SD.AutoGenerated" data-bs-toggle="modal" data-bs-target="#ModalUpsert">Add Packaging</button>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr class="text-center">
                    <th>
                        Action
                    </th>
                    <th>
                        Code
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Flag)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-outline-primary" data-bs-toggle="dropdown"><i class="fas fa-fw fa-ellipsis-h"></i></button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <button class="dropdown-item btn-upsert"
                                            data-id="@item.ID"
                                            data-industrycode="@item.IndustryCode"
                                            data-industryname="@item.IndustryName"
                                            data-flag="@item.Flag"
                                            data-bs-toggle="modal" data-bs-target="#ModalUpsert">
                                            Edit
                                        </button>
                                    </li>
                                </ul>
                            </div>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IndustryCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IndustryName)
                        </td>
                        <td class="text-center">
                            @if (item.Flag == FlagEnum.Active)
                            {
                                <span class="badge bg-success"> @Html.DisplayFor(modelItem => item.Flag)</span>
                            }
                            else
                            {
                                <span class="badge bg-danger"> @Html.DisplayFor(modelItem => item.Flag)</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<partial name="ModalUpsert" />

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function(){
            $('.table').DataTable({
            });
        });

        $('.btn-upsert').on('click', function () {
            if ($(this).data('id') == "@SD.AutoGenerated") {
                $('input[name="IndustryCode"]').val("@SD.AutoGenerated");
                $('input[name="IndustryName"]').val("");
                $('input[name="Flag"]').val("@FlagEnum.Active").change();
            }
            else {
                $('input[name="ID"]').val($(this).data('id'));
                $('input[name="IndustryCode"]').val($(this).data('industrycode'));
                $('input[name="IndustryName"]').val($(this).data('industryname'));
                $('input[name="Flag"]').val($(this).data('flag')).change();
            }
        });
    </script>
}