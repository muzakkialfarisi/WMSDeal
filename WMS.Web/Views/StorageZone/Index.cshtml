@model IEnumerable<InvStorageZone>

@{
    ViewData["Title"] = "Zone";
    ViewData["MenuKey"] = "Storage";
}

<div class="card" style="min-height:700px">
        <div class="card-header border-bottom">
        <div class="d-flex align-items-center py-1">
            <div class="flex-grow-1 ps-3">
                <h5 ><strong>Storage ZoneList</strong></h5>
            </div>
            <div>
                <button class="btn btn-outline-primary btn-pill btn-upsert" data-zonecode="@SD.AutoGenerated" data-bs-toggle="modal" data-bs-target="#ModalUpsert">Add Zone</button>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr  class="text-center">
                    <th>
                        Action
                    </th>
                    <th>
                        Zone Code
                    </th>
                    <th>
                        Zone Name
                    </th>
                    <th>
                        Status
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-outline-tertiary" data-bs-toggle="dropdown"><i class="fas fa-fw fa-ellipsis-h"></i></button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item btn-upsert" data-bs-toggle="modal" data-bs-target="#ModalUpsert"
                                       data-zonecode="@item.ZoneCode"
                                       data-zonename="@item.ZoneName"
                                       data-flag="@item.Flag">Edit</a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                        <td>
                            @item.ZoneCode
                        </td>
                        <td>
                            @item.ZoneName
                        </td>
                        <td class="text-center">
                            @if (item.Flag == FlagEnum.Active)
                            {
                                <span class="badge bg-success"> @Html.DisplayFor(modelItem => item.Flag)</span>
                            }
                            else
                            {
                                <span class="badge bg-danger"> @Html.DisplayFor(modelItem => item.Flag)</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<partial name="ModalUpsert" />

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function () {
            $('.table').DataTable({
            });
        });

        $('.btn-upsert').on('click', function () {
            if ($(this).data('zonecode') == "@SD.AutoGenerated") {
                $('input[name="ZoneCode"]').val("");
                $('input[name="ZoneName"]').val("");
                $('input[name="Flag"]').val("@FlagEnum.Active").change();
            }
            else {
                $('input[name="ZoneCode"]').val($(this).data('zonecode'));
                $('input[name="ZoneName"]').val($(this).data('zonename'));
                $('input[name="Flag"]').val($(this).data('flag')).change();
            }
        });
    </script>
}