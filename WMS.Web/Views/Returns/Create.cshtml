@model ReturnedViewModel

@{
    ViewData["Title"] = "Returned";
    ViewData["MenuKey"] = "Dispatch";
}

<form asp-action="Create" method="post">
    <div class="card">
        <div class="card-header border-bottom">
            <div class="d-flex align-items-center">
                <div class="flex-grow-1 ps-3">
                    <h5 class="card-title"><strong>Details</strong></h5>
                </div>
            </div>
        </div>
        <div class="card-body">
            <partial name="DetailSalesOrder">

            <partial name="CreateReturned">
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-sm-6">
            <partial name="DetailSalesOrderProduct">
        </div>
        <div class="col-12 col-sm-6">
            <partial name="CreateReturnedProduct">
        </div>
    </div>

    <div class="form-group text-end">
        <input type="submit" value="Create" class="btn btn-primary level4" />
        <a asp-action="Index" class="btn btn-dark">Back to Index</a>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/Returns/Create.js"> </script>
}