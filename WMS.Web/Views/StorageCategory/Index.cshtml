@model IEnumerable<InvStorageCategory>

@{
    ViewData["Title"] = "Category";
    ViewData["MenuKey"] = "Storage";
}

<div class="card" style="min-height:700px">
    <div class="card-header border-bottom">
        <div class="d-flex align-items-center py-1">
            <div class="flex-grow-1 ps-3">
                <h5 class="card-title"><strong>Storage Category List</strong></h5>
            </div>
            <div>
                <button class="btn btn-outline-primary btn-pill btn-upsert" data-storagecategoryid="@SD.AutoGenerated" data-bs-toggle="modal" data-bs-target="#ModalUpsert">Add Category</button>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr class="text-center">
                    <th>
                        Action
                    </th>
                    <th>
                        Code
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Status
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-outline-primary" data-bs-toggle="dropdown"><i class="fas fa-fw fa-ellipsis-h"></i></button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <button class="dropdown-item btn-upsert"
                                            data-storagecategoryid="@item.StorageCategoryId"
                                            data-storagecategorycode="@item.StorageCategoryCode"
                                            data-storagecategoryname="@item.StorageCategoryName"
                                            data-flag="@item.Flag"
                                            data-bs-toggle="modal" data-bs-target="#ModalUpsert">
                                            Edit
                                        </button>
                                    </li>
                                </ul>
                            </div>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StorageCategoryCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StorageCategoryName)
                        </td>
                        <td class="text-center">
                            @if (item.Flag == FlagEnum.Active)
                            {
                                <span class="badge bg-success"> @Html.DisplayFor(modelItem => item.Flag)</span>
                            }
                            else
                            {
                                <span class="badge bg-danger"> @Html.DisplayFor(modelItem => item.Flag)</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<partial name="ModalUpsert" />

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function () {
            $('.table').DataTable({
            });
        });

        $('.btn-upsert').on('click', function () {
            if ($(this).data('storagecategoryid') == "@SD.AutoGenerated") {
                $('input[name="StorageCategoryId"]').val("@SD.AutoGenerated");
                $('input[name="StorageCategoryCode"]').val("");
                $('input[name="StorageCategoryName"]').val("");
                $('input[name="Flag"]').val("@FlagEnum.Active").change();
            }
            else {
                $('input[name="StorageCategoryId"]').val($(this).data('storagecategoryid'));
                $('input[name="StorageCategoryCode"]').val($(this).data('storagecategorycode'));
                $('input[name="StorageCategoryName"]').val($(this).data('storagecategoryname'));
                $('input[name="Flag"]').val($(this).data('flag')).change();
            }
        });
    </script>
}