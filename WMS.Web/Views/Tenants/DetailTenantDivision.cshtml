@model MasDataTenant

<div class="text-end mb-4">
    <a class="btn btn-outline-primary btn-pill btn-insert-division" data-bs-toggle="modal" data-bs-target="#modalupsertdivision">Add Division</a>
</div>
<partial name="ModalUpsertTenantDivision" />

<div class="table-responsive">
    <table class="table table-striped table-division">
        <thead>
            <tr class="text-center">
                <th>
                    Action
                </th>
                <th>
                    Name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.MasDataTenantDivisions)
            {
                <tr>
                    <td class="text-center">
                        <button type="button" class="btn btn-outline-tertiary" data-bs-toggle="dropdown"><i class="fas fa-fw fa-ellipsis-h"></i></button>
                        <ul class="dropdown-menu">
                            <li><button class="dropdown-item btn-update-division" data-id="@item.Id" data-bs-toggle="modal" data-bs-target="#modalupsertdivision">Edit</button></li>
                        </ul>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>