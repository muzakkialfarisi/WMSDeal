@model DeliveryOrderCreateViewModel

@{
    string DONumber = string.Empty;
    if(Model.incDeliveryOrder != null)
    {
        DONumber = Model.incDeliveryOrder.DONumber;
    }
}

<input name="DONumber" value="@DONumber" hidden/>

<div class="mb-3 form-group required">
    <label class="control-label">Tenant</label>
    <select asp-for="incDeliveryOrder.TenantId" class="form-control select2" data-bs-toggle="select2" asp-items="ViewBag.TenantId">
    </select>
    <span asp-validation-for="incDeliveryOrder.TenantId" class="text-danger"></span>
</div>

<div class="row">
    <div class="col-12 col-sm-6">
        <div class="mb-3 form-group required">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="DOSupplier" data-bs-toggle="tooltip" data-bs-placement="top" title="Generate DO Number By System" checked>
                <label class="control-label">DO Number</label>
            </div>
            <input type="text" class="form-control" asp-for="incDeliveryOrder.DOSupplier" value="@SD.AutoGenerated" readonly>
            <span asp-validation-for="incDeliveryOrder.DOSupplier" class="text-danger"></span>
        </div>
    </div>
    <div class="col-12 col-sm-6">
        <div class="mb-3 form-group required">
            <label class="control-label">Warehouse</label>
            <select asp-for="incDeliveryOrder.HouseCode" asp-items="ViewBag.HouseCode" class="form-control select2" data-bs-toggle="select2" required>
                <option selected disabled>Select...</option>
            </select>
            <span asp-validation-for="incDeliveryOrder.HouseCode" class="text-danger"></span>
        </div>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-12 col-sm-6">
        <div class="mb-3 form-group required">
            <label class="control-label">Supplier</label>
            <select asp-for="incDeliveryOrder.SupplierId" asp-items="ViewBag.SupplierId" class="form-control select2" data-bs-toggle="select2" required>
                <option disabled selected>Select...</option>
            </select>
            <span asp-validation-for="incDeliveryOrder.SupplierId" class="text-danger"></span>
        </div>
    </div>
    <div class="col-12 col-sm-6">
        <div class="mb-3 form-group required">
            <label class="control-label">Date Delivered</label>
            <input asp-for="incDeliveryOrder.DateDelivered" class="form-control" type="date" required>
            <span asp-validation-for="incDeliveryOrder.DateDelivered" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 col-sm-6">
        <div class="mb-3 form-group required">
            <label class="control-label">Courier</label>
            <select asp-for="incDeliveryOrder.DeliveryCourierId" asp-items="ViewBag.DeliveryCourierId" class="form-control select2" data-bs-toggle="select2" required>
                <option disabled selected>Select...</option>
            </select>
            <span asp-validation-for="incDeliveryOrder.DeliveryCourierId" class="text-danger"></span>
        </div>
    </div>

    <div class="col-12 col-sm-6">
        <div class="mb-3 form-group">
            <label class="control-label">Shipping Cost</label>
            <input asp-for="incDeliveryOrder.ShippingCost" class="form-control" value="0" required>
            <span asp-validation-for="incDeliveryOrder.ShippingCost" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 col-sm-6">
        <div class="mb-3 form-group">
            <label class="control-label">KTP</label>
            <input asp-for="incDeliveryOrder.KTP" class="form-control">
            <span asp-validation-for="incDeliveryOrder.KTP" class="text-danger"></span>
        </div>
    </div>
    <div class="col-12 col-sm-6">
        <div class="mb-3 form-group">
            <label class="control-label">Name</label>
            <input asp-for="incDeliveryOrder.Name" class="form-control">
            <span asp-validation-for="incDeliveryOrder.Name" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="mb-3 form-group required">
    <label class="control-label">Note</label>
    <textarea asp-for="incDeliveryOrder.Note" class="form-control" rows="2"></textarea>
    <span asp-validation-for="incDeliveryOrder.Note" class="text-danger"></span>
</div>

<div class="form-group text-end">
    @if (Model.incDeliveryOrder == null)
    {
        <button type="submit" class="btn btn-primary">Next</button>
    }
    else
    {
        <button type="submit" class="btn btn-primary">Update</button>
    }
</div>