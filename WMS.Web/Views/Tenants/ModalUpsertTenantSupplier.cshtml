@model MasDataTenant

<div class="modal fade" id="modalupsertsupplier" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <form asp-action="UpsertTenantSupplier" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Supplier</h5>
                </div>
                <div class="modal-body m-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input name="SupplierId" hidden />
                    <input asp-for="TenantId" hidden />

                    <div class="row">
                        <div class="col-12 col-sm-6">
                            <div class="form-group mb-3 required">
                                <label class="control-label">Supplier Type</label>
                                <select name="SupplierTypeId" class="form-control select2" data-bs-toggle="select2" asp-items="ViewBag.SupplierTypeId" required>
                                    <option selected disabled value="">Select...</option>
                                </select>
                                <span class="text-danger field-validation-valid" data-valmsg-for="SupplierTypeId" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="form-group mb-3 required">
                                <label class="control-label">Supplier Service</label>
                                <select name="SupplierServiceId" class="form-control select2" data-bs-toggle="select2" asp-items="ViewBag.SupplierServiceId" required>
                                    <option selected disabled value="">Select...</option>
                                </select>
                                <span class="text-danger field-validation-valid" data-valmsg-for="SupplierServiceId" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 col-sm-6">
                            <div class="form-group required">
                                <label class="control-label">Name</label>
                                <input Name="Name" class="form-control" required />
                                <span class="text-danger field-validation-valid" data-valmsg-for="Name" data-valmsg-replace="true"></span>
                            </div><br />
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="form-group required">
                                <label class="control-label">Email</label>
                                <input Name="Email" type="email" class="form-control" required />
                                <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                            </div><br />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 col-sm-6">
                            <div class="form-group required">
                                <label class="control-label">Hand Phone</label>
                                <input Name="HandPhone" class="form-control" />
                                <span class="text-danger field-validation-valid" data-valmsg-for="HandPhone" data-valmsg-replace="true"></span>
                            </div><br />
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Office Phone</label>
                                <input Name="OfficePhone" class="form-control" />
                                <span class="text-danger field-validation-valid" data-valmsg-for="OfficePhone" data-valmsg-replace="true"></span>
                            </div><br />
                        </div>
                    </div>

                    <div class="form-group mb-3 required">
                        <label class="control-label">Industry</label>
                        <select Name="IndustryId" class="form-control select2" data-bs-toggle="select2" asp-items="ViewBag.IndustryId" required>
                            <option selected disabled value="">Select...</option>
                        </select>
                        <span class="text-danger field-validation-valid" data-valmsg-for="IndustryId" data-valmsg-replace="true"></span>
                    </div>

                    <div class="form-group mb-3 required">
                        <label class="control-label">Status</label>
                        <select Name="Flag" class="form-control select2" data-bs-toggle="select2" asp-items="Html.GetEnumSelectList<FlagEnum>()" required>
                        </select>
                        <span class="text-danger field-validation-valid" data-valmsg-for="Flag" data-valmsg-replace="true"></span>
                    </div>

                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
