@model SalesOrderCreateViewModel

<div class="row">
    <div class="col-12 col-sm-6">
        <div class="form-check form-switch pt-4">
            <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked">
            <label class="form-check-label" for="flexSwitchCheckChecked"><h5 class="card-title"><strong>Paste</strong></h5></label>
        </div>
    </div>
</div>

<br />

@{
    var CneeName = "";
    var CneePhone = "";
    var CneeAddress = "";
    var CneeZipCode = "";
    @if (Model.outSalesOrder != null)
    {
        @if (Model.outSalesOrder.OrdSalesType == SD.SOType_Retrieval)
        {
            @if (Model.outSalesOrder.OutSalesOrderConsignee == null)
            {
                CneeName = SD.AutoGenerated;
                CneePhone = SD.AutoGenerated;
                CneeAddress = Model.outSalesOrder.MasHouseCode.Address;
                CneeZipCode = Model.outSalesOrder.MasHouseCode.KodePos;
            }
            else
            {
                CneeAddress = Model.outSalesOrder.OutSalesOrderConsignee.CneeAddress;
                CneeZipCode = Model.outSalesOrder.OutSalesOrderConsignee.OrdZipCode;
            }
        }
        else
        {
            @if (Model.outSalesOrder.OutSalesOrderConsignee != null)
            {
                CneeAddress = Model.outSalesOrder.OutSalesOrderConsignee.CneeAddress;
                CneeZipCode = Model.outSalesOrder.OutSalesOrderConsignee.OrdZipCode;
            }
        }
    }
}

<div class="form-group required mb-3">
    <label class="control-label">Name</label>
    <input name="outSalesOrder.OutSalesOrderConsignee.CneeName" value="@CneeName" class="form-control" required />
    <span asp-validation-for="outSalesOrder.OutSalesOrderConsignee.CneeName" class="text-danger"></span>
</div>
<div class="form-group required mb-3">
    <label class="control-label">Phone</label>
    <input name="outSalesOrder.OutSalesOrderConsignee.CneePhone" value="@CneePhone" class="form-control" required />
    <span asp-validation-for="outSalesOrder.OutSalesOrderConsignee.CneePhone" class="text-danger"></span>
</div>
<div class="form-group required mb-3">
    <label class="control-label">Provinsi</label>
    <select name="outSalesOrder.OutSalesOrderConsignee.CneePro" class="form-control select2" data-bs-toggle="select2" asp-items="ViewBag.ProIdCnee" required>
        <option selected disabled value="">Select...</option>
    </select>
    <span class="text-danger field-validation-valid" data-valmsg-for="outSalesOrder.OutSalesOrderConsignee.CneePro" data-valmsg-replace="true"></span>
</div>
<div class="form-group required mb-3">
    <label class="control-label">Kabupaten</label>
    <select asp-for="outSalesOrder.OutSalesOrderConsignee.CneeCity" class="form-control select2" data-bs-toggle="select2" asp-items="ViewBag.CneeCity" required>
        <option selected disabled>Select...</option>
    </select>
    <span asp-validation-for="outSalesOrder.OutSalesOrderConsignee.CneeCity" class="text-danger"></span>
</div>
<div class="form-group required mb-3">
    <label class="control-label">Kecamatan</label>
    <select name="outSalesOrder.OutSalesOrderConsignee.CneeKec" class="form-control select2" data-bs-toggle="select2" asp-items="ViewBag.KecCnee" required>
        <option selected disabled>Select...</option>
    </select>
    <span class="text-danger field-validation-valid" data-valmsg-for="outSalesOrder.OutSalesOrderConsignee.CneeKec" data-valmsg-replace="true"></span>
</div>
<div class="form-group required mb-3">
    <label class="control-label">Kelurahan</label>
    <select asp-for="outSalesOrder.OutSalesOrderConsignee.KelId" class="form-control select2" data-bs-toggle="select2" asp-items="ViewBag.KelCnee" required>
        <option selected disabled>Select...</option>
    </select>
    <span asp-validation-for="outSalesOrder.OutSalesOrderConsignee.KelId" class="text-danger"></span>
</div>

<div class="form-group required mb-3">
    <label class="control-label">Address</label>
    <textarea name="outSalesOrder.OutSalesOrderConsignee.CneeAddress" class="form-control" rows="2" placeholder="Textarea" required>@CneeAddress</textarea>
    <span asp-validation-for="outSalesOrder.OutSalesOrderConsignee.CneeAddress" class="text-danger"></span>
</div>
<div class="form-group required mb-3">
    <label class="control-label">Kode Pos</label>
    <input asp-for="outSalesOrder.OutSalesOrderConsignee.OrdZipCode" value="@CneeZipCode" class="form-control" />
    <span asp-validation-for="outSalesOrder.OutSalesOrderConsignee.OrdZipCode" class="text-danger"></span>
</div>