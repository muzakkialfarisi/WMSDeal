<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WMSDeal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WMSDeal"
    xmlns:startup="clr-namespace:WMSDeal.Views.Startup"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarIsVisible="False"
    
    Shell.TabBarUnselectedColor="{StaticResource Gray400}"
    Shell.TabBarBackgroundColor="{StaticResource Background2}"
    Shell.NavBarHasShadow="True"
    Shell.TabBarTitleColor="{StaticResource WMSBlue}"
    Shell.BackgroundColor="{StaticResource WMSBlue}"
    >
    <ShellContent
        FlyoutItemIsVisible="False" Shell.FlyoutBehavior="Disabled"
        ContentTemplate="{DataTemplate startup:LoadingPage}"
        Route="LoadingPage"/>

    <ShellContent
        FlyoutItemIsVisible="False" Shell.FlyoutBehavior="Disabled"
        ContentTemplate="{DataTemplate startup:LoginPage}"
        Route="LoginPage"/>

</Shell>
