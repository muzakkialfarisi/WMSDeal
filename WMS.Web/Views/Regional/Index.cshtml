@model IEnumerable<MasRegional>

@{
    ViewData["Title"] = "Regionals";
    ViewData["MenuKey"] = "Operasional";
}

<div class="card" style="min-height:700px">
    <div class="card-header border-bottom">
        <div class="d-flex align-items-center py-1">
            <div class="flex-grow-1 ps-3">
                <h5 class="card-title"><strong>Region List</strong></h5>
            </div>
            <div>
                <button class="btn btn-outline-primary btn-pill btn-upsert" data-regionid="@SD.AutoGenerated" data-bs-toggle="modal" data-bs-target="#ModalUpsert">Add Region</button>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">

            <table class="table table-striped">
                <thead>
                    <tr class="text-center">
                        <th>
                            Action
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RegionCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RegionName)
                        </th>
                        <th>
                            Provinsi
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.Flag)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-outline-tertiary" data-bs-toggle="dropdown"><i class="fas fa-fw fa-ellipsis-h"></i></button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item btn-upsert" data-bs-toggle="modal" data-bs-target="#ModalUpsert"
                                           data-regionid="@item.RegionId"
                                           data-regioncode="@item.RegionCode"
                                           data-regionname="@item.RegionName"
                                           data-flag="@item.Flag">Edit</a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RegionCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RegionName)
                            </td>
                            <td>
                                @item.MasProvinsis.Count
                            </td>
                            <td class="text-center">
                                @if (item.Flag == FlagEnum.Active)
                                {
                                    <span class="badge bg-success"> @Html.DisplayFor(modelItem => item.Flag)</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger"> @Html.DisplayFor(modelItem => item.Flag)</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

<partial name="ModalUpsert" />

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function () {
            $('.table').DataTable({
            });
        });

        $('.btn-upsert').on('click', function () {
            if ($(this).data('regionid') == "@SD.AutoGenerated") {
                $('input[name="RegionId"]').val("");
                $('input[name="RegionCode"]').val("");
                $('input[name="RegionName"]').val("");
                $('input[name="Flag"]').val("@FlagEnum.Active").change();
            }
            else {
                $('input[name="RegionId"]').val($(this).data('regionid'));
                $('input[name="RegionCode"]').val($(this).data('regioncode'));
                $('input[name="RegionName"]').val($(this).data('regionname'));
                $('input[name="Flag"]').val($(this).data('flag')).change();
            }
        });
    </script>
}