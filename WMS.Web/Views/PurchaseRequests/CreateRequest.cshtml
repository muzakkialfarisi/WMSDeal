
@model IncRequestPurchase

<div class="card">
    <div class="card-header border-bottom">
        <div class="d-flex align-items-center">
            <div class="flex-grow-1 ps-3">
                <h5 class="card-title"><strong>Creaet New Request</strong></h5>
            </div>
        </div>
    </div>
    <div class="card-body">
        <input asp-for="RequestNumber" hidden value="AutoGenerated"/>
        <div class="mb-3 form-group required">
            <label class="control-label">Tenant</label>
            <select asp-for="TenantId" class ="form-control select2" data-bs-toggle="select2" asp-items="ViewBag.TenantId" required>
                <option selected disabled value="">Select...</option>
            </select>
            <span asp-validation-for="TenantId" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-12 col-sm-6">
                <div class="mb-3 form-group">
                    <label class="control-label">Division</label>
                    <select asp-for="TenantDivisionId" class ="form-control select2" data-bs-toggle="select2" asp-items="ViewBag.TenantDivisionId">
                        <option selected disabled value="">Select...</option>
                    </select>
                    <span asp-validation-for="TenantDivisionId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-sm-6">
                <div class="mb-3 form-group required">
                    <label class="control-label">Warehouse</label>
                    <select asp-for="TenantHouseId" class ="form-control select2" data-bs-toggle="select2" asp-items="ViewBag.TenantHouseId">
                        <option selected disabled value="">Select...</option>
                    </select>
                    <span asp-validation-for="TenantHouseId" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="mb-3 form-group required">
            <label asp-for="SpecialInstruction" class="control-label"></label>
            <textarea asp-for="SpecialInstruction" class="form-control" rows="2" required></textarea>
            <span asp-validation-for="SpecialInstruction" class="text-danger"></span>
        </div>
    </div>
</div>
