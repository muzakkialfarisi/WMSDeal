@model PurchaseOrderViewModel

@{
    ViewData["Title"] = "Create Purchase Order";
    ViewData["MenuKey"] = "Purchase Order";
}

<form asp-action="Request" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <partial name="RequestPurchaseOrder" />
    
    <div class="row">
        <div class="col-12 col-sm-6">
            <partial name="RequestPurchaseOrderProduct" />
        </div>
        <div class="col-12 col-sm-6">
            <partial name="CreatePurchaseorderProduct" />
        </div>
    </div>

    <div class="form-group text-end">
        <input type="submit" value="Create" class="btn btn-primary level4" />
        <a asp-action="Index" class="btn btn-dark">Back to List</a>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/js/PurchaseOrders/Request.js"> </script>
}