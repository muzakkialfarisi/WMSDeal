@model PurchaseOrderViewModel

<div class="card">
    <div class="card-header border-bottom">
        <div class="d-flex align-items-center">
            <div class="flex-grow-1 ps-3">
                <h5 class="card-title">Request Purchase  <strong>@Model.IncRequestPurchase.RequestNumber</strong></h5>
            </div>
        </div>
    </div>
    <div class="card-body">

        <input asp-for="IncPurchaseOrder.PONumber" value="Auto Generated" type="hidden" />
        <input asp-for="IncRequestPurchase.RequestId" type="hidden" />

        <div class="mb-3 form-group required">
            <label class="control-label">Tenant</label>
            <select asp-for="IncRequestPurchase.TenantId" class ="form-control" asp-items="ViewBag.TenantId" readonly>
                <option selected disabled>Select...</option>
            </select>
            <span asp-validation-for="IncRequestPurchase.TenantId" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-12 col-sm-6">                
                <div class="mb-3 form-group">
                    <label class="control-label">Division</label>
                    <select asp-for="IncRequestPurchase.TenantDivisionId" class ="form-control" asp-items="ViewBag.TenantDivisionId" readonly>
                        <option selected disabled>Select...</option>
                    </select>
                    <span asp-validation-for="IncRequestPurchase.TenantDivisionId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-sm-6">
                <div class="mb-3 form-group required">
                    <label class="control-label">Warehouse</label>
                    <select asp-for="IncRequestPurchase.TenantHouseId" class ="form-control" asp-items="ViewBag.TenantHouseId" readonly>
                        <option selected disabled>Select...</option>
                    </select>
                    <span asp-validation-for="IncRequestPurchase.TenantHouseId" class="text-danger"></span>
                </div>
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="col-12 col-sm-4">
                <div class="mb-3 form-group required">
                    <label class="control-label">Supplier</label>
                    <select asp-for="IncPurchaseOrder.SupplierId" asp-items="ViewBag.SupplierId" class="form-control select2" data-bs-toggle="select2" required>
                        <option selected disabled>Select...</option>
                    </select>
                    <span asp-validation-for="IncPurchaseOrder.SupplierId" class="text-danger"></span>
                </div>
            </div>

            <div class="col-12 col-sm-4">
                <div class="mb-3 form-group required">
                    <label class="control-label">Tax</label>
                    <input asp-for="IncPurchaseOrder.OrderTax" class="form-control number-saparator NumberOnly" value="0" min="0">
                    <span asp-validation-for="IncPurchaseOrder.OrderTax" class="text-danger"></span>
                </div>
            </div>

            <div class="col-12 col-sm-4">
                <div class="mb-3 form-group required">
                    <label class="control-label">Discount</label>
                    <input asp-for="IncPurchaseOrder.Discount" class="form-control number-saparator NumberOnly" value="0" min="0">
                    <span asp-validation-for="IncPurchaseOrder.Discount" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group required">
            <label class="control-label">Special Instruction</label>
            <textarea asp-for="IncRequestPurchase.SpecialInstruction" class="form-control" required>@Model.IncRequestPurchase.SpecialInstruction</textarea>
            <span asp-validation-for="IncRequestPurchase.SpecialInstruction" class="text-danger"></span>
        </div>
    </div>
</div>
