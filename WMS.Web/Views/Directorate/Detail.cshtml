@model MasDirectorate

@{
    ViewData["Title"] = "Directorate";
    ViewData["MenuKey"] = "Operasional";
}

<div class="row">
    <div class="col-12 col-md-4 col-sm-4">
        <partial name="DetailDirectorate" />
    </div>
    <div class="col-12 col-md-8 col-sm-8">
        <partial name="DetailDirectorateDivision">
    </div>
</div>

<partial name="ModalUpsertDivision">

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function () {
            $('.tbl-division').DataTable({
            });
        });

        $('.btn-upsert').on('click', function () {
            if ($(this).data('divid') == "@SD.AutoGenerated") {
                $('input[name="DivId"]').val("");
                $('input[name="DivCode"]').val("");
                $('input[name="DivName"]').val("");
                $('input[name="Flag"]').val("@FlagEnum.Active").change();
            }
            else {
                $('input[name="DivId"]').val($(this).data('divid'));
                $('input[name="DivCode"]').val($(this).data('divcode'));
                $('input[name="DivName"]').val($(this).data('divname'));
                $('input[name="Flag"]').val($(this).data('flag')).change();
            }
        });
    </script>
}