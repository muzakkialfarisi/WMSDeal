@model IEnumerable<MasProductPriority>

@{
    ViewData["Title"] = "Priority";
    ViewData["MenuKey"] = "Product";
}
<div class="row">
    <div class="col-12">
        <div class="card" style="min-height:700px">
            <div class="card-header border-bottom">
                <div class="d-flex align-items-center py-1">
                    <div class="flex-grow-1 ps-3">
                        <h5 class="card-title"><strong>Product Priority List</strong></h5>
                    </div>
                    <div>
                        <button class="btn btn-outline-primary btn-pill btn-upsert" data-cargoprioritycode="@SD.AutoGenerated" data-bs-toggle="modal" data-bs-target="#ModalUpsert">Add Packaging</button>
                    </div>
                </div>
            </div><br />
            <div class="card-body">

                <table class="table table-striped">
                    <thead>
                        <tr class="text-center">
                            <th>
                                Action
                            </th>
                            <th>
                                Code
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Status
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-outline-primary" data-bs-toggle="dropdown"><i class="fas fa-fw fa-ellipsis-h"></i></button>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <button class="dropdown-item btn-upsert"
                                                    data-cargoprioritycode="@item.CargoPriorityCode"
                                                    data-cargopriorityname="@item.CargoPriorityName"
                                                    data-cargoprioritydescription="@item.CargoPriorityDescription"
                                                    data-flag="@item.Flag"
                                                    data-bs-toggle="modal" data-bs-target="#ModalUpsert">
                                                    Edit
                                                </button>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CargoPriorityCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CargoPriorityName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CargoPriorityDescription)
                                </td>
                                <td class="text-center">
                                    @if (item.Flag == FlagEnum.Active)
                                    {
                                        <span class="badge bg-success"> @Html.DisplayFor(modelItem => item.Flag)</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger"> @Html.DisplayFor(modelItem => item.Flag)</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

<partial name="ModalUpsert" />

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function(){
            $('.table').DataTable({
            });
        });

        $('.btn-upsert').on('click', function () {
            if ($(this).data('cargoprioritycode') == "@SD.AutoGenerated") {
                $('input[name="CargoPriorityCode"]').val("");
                $('input[name="CargoPriorityName"]').val("");
                $('input[name="CargoPriorityDescription"]').val("");
                $('input[name="Flag"]').val("@FlagEnum.Active").change();
            }
            else {
                $('input[name="CargoPriorityCode"]').val($(this).data('cargoprioritycode'));
                $('input[name="CargoPriorityName"]').val($(this).data('cargopriorityname'));
                $('input[name="CargoPriorityDescription"]').val($(this).data('cargoprioritydescription'));
                $('input[name="Flag"]').val($(this).data('flag')).change();
            }
        });
    </script>
}