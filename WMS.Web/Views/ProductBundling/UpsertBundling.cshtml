@model ProductBundlingCreateViewModel

<input asp-for="masProductBundling.BundlingId" hidden/>

<div class="form-group required mb-3">
    <label class="control-label">Tenant</label>
    <select class="form-control select2" data-bs-toggle="select2" asp-for="masProductBundling.TenantId" asp-items="@ViewBag.TenantId">
    </select>
    <span asp-validation-for="masProductBundling.TenantId" class="text-danger"></span>
</div>

<div class="form-group required mb-3">
    <label class="control-label">Bundling Name</label>
    <input class="form-control" asp-for="masProductBundling.Name" required>
    <span asp-validation-for="masProductBundling.Name" class="text-danger"></span>
</div>

<div class="mb-3 form-group required">
    <label class="control-label">Status</label>
    <select asp-for="masProductBundling.Flag" class="form-control select2" data-bs-toggle="select2" asp-items="Html.GetEnumSelectList<FlagEnum>()">
    </select>
    <span asp-validation-for="masProductBundling.Flag" class="text-danger"></span>
</div>

<div class="form-group text-end">
    @if (Model.masProductBundling == null)
    {
            <button type="submit" class="btn btn-primary">Next</button>
    }
    else
    {
            <button type="submit" class="btn btn-primary">Update</button>
    }
</div>