
@model StorageSizeViewModel

@{
    ViewData["Title"] = "Size";
    ViewData["MenuKey"] = "Storage";
}

<div class="row">
    <div class="col-12">
        <div class="card" style="min-height:700px">
            <div class="card-header border-bottom">
                <div class="d-flex align-items-center py-1">
                    <div class="flex-grow-1 ps-3">
                        <h5 class="card-title"><strong>Create a new Storage Size</strong></h5>
                    </div>
                </div>
            </div><br />
            <div class="card-body">
                <div class="col-md-5">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="InvStorageSize.SizeCode" class="control-label"></label>
                            <input asp-for="InvStorageSize.SizeCode" class="form-control" readonly="readonly" value="AutoGenerated" />
                            @*<span asp-validation-for="InvStorageSize.SizeCode" class="text-danger"></span>*@
                        </div><br />
                        <div class="form-group">
                            <label asp-for="InvStorageSize.SizeName" class="control-label"></label>
                            <input asp-for="InvStorageSize.SizeName" class="form-control" readonly="readonly" value="AutoGererated" />
                            @*<span asp-validation-for="InvStorageSize.SizeName" class="text-danger"></span>*@
                        </div><br />
                        <div class="form-group">
                            <label asp-for="InvStorageSize.BesaranCode"></label>
                            <div class="input-group">
                                <select asp-for="InvStorageSize.BesaranCode" class="form-select flex-grow-1" asp-items="ViewBag.BesaranCode">
                                    <option selected disabled>Select...</option>
                                </select>
                                <button class="btn btn-secondary" type="button" data-bs-toggle="modal" data-bs-target="#modalBesaran"><i class="fas fa-fw fa-plus"></i></button>
                            </div>
                            <span asp-validation-for="InvStorageSize.BesaranCode" class="text-danger"></span>
                        </div><br />
                        <div class="form-group">
                            <label asp-for="InvStorageSize.TebalCode"></label>
                            <div class="input-group">
                                <select asp-for="InvStorageSize.TebalCode" class="form-select flex-grow-1" asp-items="ViewBag.TebalCode">
                                    <option selected disabled>Select...</option>
                                </select>
                                <button class="btn btn-secondary" type="button" data-bs-toggle="modal" data-bs-target="#modalTebal"><i class="fas fa-fw fa-plus"></i></button>
                            </div>

                            <span asp-validation-for="InvStorageSize.TebalCode" class="text-danger"></span>
                        </div><br />
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" /> &nbsp;
                            <a asp-action="Index" class="btn btn-dark">Back to List</a>
                        </div>
                    </form>
                </div>
                <div class="modal fade" id="modalTebal" tabindex="-1" role="form" aria-hidden="true">
                    <div class="modal-dialog modal-md modal-dialog-centered modal-dialog-scrollable" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Add Thick Storage Size</h5>
                                @*<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>*@
                            </div>
                            <form method="post" asp-controller="StorageSizes" asp-action="CreateTebal">

                                <div class="modal-body m-3">
                                    <table class="table table-stripped">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Code
                                                </th>
                                                <th>
                                                    Name
                                                </th>
                                                <th>
                                                    Max Height
                                                </th>
                                                @* <th>
                                                    Action
                                                    </th>*@
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Tebals)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Code)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.MaxTinggi)
                                                    </td>
                                                    @*<td>
                                                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Code"><i class="fas fa-pencil-alt"></i></a>
                                                        </td>*@
                                                </tr>
                                            }
                                        </tbody>
                                    </table>

                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <label asp-for="InvStorageTebal.Code" class="control-label"></label>
                                            <input asp-for="InvStorageTebal.Code" class="form-control" />
                                            <span asp-validation-for="InvStorageTebal.Code" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-4">
                                            <label asp-for="InvStorageTebal.Name" class="control-label"></label>
                                            <input asp-for="InvStorageTebal.Name" class="form-control" />
                                            <span asp-validation-for="InvStorageTebal.Name" class="text-danger"></span>
                                        </div>

                                        <div class="col-md-3">
                                            <label asp-for="InvStorageTebal.MaxTinggi" class="control-label"></label>
                                            <div class="input-group">
                                                <input asp-for="InvStorageTebal.MaxTinggi" class="form-control" />
                                                <span class="input-group-text">CM</span>
                                            </div>
                                            <span asp-validation-for="InvStorageTebal.MaxTinggi" class="text-danger"></span>
                                        </div>
                                    </div><br />

                                </div>
                                <div class="modal-footer align-middle">
                                    <input type="submit" value="Save" class="btn btn-primary" id="SaveTebal" /> &nbsp;
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
                <div class="modal fade" id="modalBesaran" tabindex="-1" role="dialog" aria-hidden="true">
                    <div class="modal-dialog modal-md modal-dialog-centered modal-dialog-scrollable" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Add Wide Storage Size</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <form method="post" asp-controller="StorageSizes" asp-action="CreateBesar">
                                <div class="modal-body m-3">
                                    <table class="table table-stripped">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Code
                                                </th>
                                                <th>
                                                    Name
                                                </th>
                                                <th>
                                                    Max Length
                                                </th>
                                                <th>
                                                    Max Width
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Besarans)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Code)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.MaxPanjang)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.MaxLebar)
                                                    </td>
                                                    @*<td>
                                                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Code"><i class="fas fa-pencil-alt"></i></a>
                                                        </td>*@
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="row">
                                        <div class="col-md-2">
                                            <label asp-for="InvStorageBesaran.Code" class="control-label"></label>
                                            <input asp-for="InvStorageBesaran.Code" class="form-control" />
                                            <span asp-validation-for="InvStorageBesaran.Code" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-4">
                                            <label asp-for="InvStorageBesaran.Name" class="control-label"></label>
                                            <input asp-for="InvStorageBesaran.Name" class="form-control" />
                                            <span asp-validation-for="InvStorageBesaran.Name" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-3">
                                            <label asp-for="InvStorageBesaran.MaxPanjang" class="control-label"></label>
                                            <div class="input-group">
                                                <input asp-for="InvStorageBesaran.MaxPanjang" class="form-control" />
                                                <span class="input-group-text">CM</span>
                                            </div>
                                            <span asp-validation-for="InvStorageBesaran.MaxPanjang" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-3">
                                            <label asp-for="InvStorageBesaran.MaxLebar" class="control-label"></label>
                                            <div class="input-group">
                                                <input asp-for="InvStorageBesaran.MaxLebar" class="form-control" />
                                                <span class="input-group-text">CM</span>
                                            </div>
                                            <span asp-validation-for="InvStorageBesaran.MaxLebar" class="text-danger"></span>
                                        </div>
                                    </div><br />
                                </div>
                                <div class="modal-footer align-middle">
                                    <input type="submit" value="Save" class="btn btn-primary" id="SaveBesar" /> &nbsp;
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>



            </div>
        </div>
    </div>
</div>
