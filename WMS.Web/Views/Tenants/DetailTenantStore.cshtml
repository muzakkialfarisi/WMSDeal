@model MasDataTenant

<div class="text-end mb-4">
    <a class="btn btn-outline-primary btn-pill btn-insert-store" data-bs-toggle="modal" data-bs-target="#modalupsertstore">Add Store</a>
</div>
<partial name="ModalUpsertTenantStore" />

<div class="table-responsive">
    <table class="table table-striped table-store">
        <thead>
            <tr class="text-center">
                <th>
                    Action
                </th>
                <th>
                    Platform
                </th>
                <th>
                    Name
                </th>
                <th>
                    Contacts
                </th>
                <th>
                    Status
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.MasStores)
            {
                <tr>
                    <td class="text-center">
                        <button type="button" class="btn btn-outline-tertiary" data-bs-toggle="dropdown"><i class="fas fa-fw fa-ellipsis-h"></i></button>
                        <ul class="dropdown-menu">
                            <li><button class="dropdown-item btn-update-store" data-id="@item.StoreId" data-bs-toggle="modal" data-bs-target="#modalupsertstore">Edit</button></li>
                        </ul>
                    </td>
                    <td>
                        @item.MasPlatform.Name
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.PhoneNumber
                    </td>
                    <td class="text-center">
                        @if (item.Flag == FlagEnum.Active)
                        {
                            <span class="badge bg-success"> @Html.DisplayFor(modelItem => item.Flag)</span>
                        }
                        else
                        {
                            <span class="badge bg-danger"> @Html.DisplayFor(modelItem => item.Flag)</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>