@model IEnumerable<MasSupplierService>

@{
    ViewData["Title"] = "Service";
    ViewData["MenuKey"] = "Supplier";
}

<div class="card" style="min-height:700px">
    <div class="card-header border-bottom">
        <div class="d-flex align-items-center py-1">
            <div class="flex-grow-1 ps-3">
                <h5 class="card-title"><strong>Supplier Service List</strong></h5>
            </div>
            <div>
                <button class="btn btn-outline-primary btn-pill btn-upsert" data-serviceid="@SD.AutoGenerated" data-bs-toggle="modal" data-bs-target="#ModalUpsert">Add Service</button>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead >
                <tr class="text-center">
                    <th>
                        Action
                    </th>
                    <th>
                        Code
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Status
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-outline-primary" data-bs-toggle="dropdown"><i class="fas fa-fw fa-ellipsis-h"></i></button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <button class="dropdown-item btn-upsert"
                                            data-serviceid="@item.ServiceId"
                                            data-supplierservicecode="@item.SupplierServiceCode"
                                            data-supplierservicename="@item.SupplierServiceName"
                                            data-flag="@item.Flag"
                                            data-bs-toggle="modal" data-bs-target="#ModalUpsert">
                                            Edit
                                        </button>
                                    </li>
                                </ul>
                            </div>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SupplierServiceCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SupplierServiceName)
                        </td>
                        <td class="text-center">
                            @if (item.Flag == FlagEnum.Active)
                            {
                                <span class="badge bg-success"> @Html.DisplayFor(modelItem => item.Flag)</span>
                            }
                            else
                            {
                                <span class="badge bg-danger"> @Html.DisplayFor(modelItem => item.Flag)</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<partial name="ModalUpsert" />

@section Scripts{
    <script>
        $(function () {
            $('.table').DataTable({
            });
        });

        $('.btn-upsert').on('click', function () {
            if ($(this).data('serviceid') == "@SD.AutoGenerated") {
                $('input[name="ServiceId"]').val("");
                $('input[name="SupplierServiceCode"]').val("");
                $('input[name="SupplierServiceName"]').val("");
                $('input[name="Flag"]').val("@FlagEnum.Active").change();
            }
            else {
                $('input[name="ServiceId"]').val($(this).data('serviceid'));
                $('input[name="SupplierServiceCode"]').val($(this).data('supplierservicecode'));
                $('input[name="SupplierServiceName"]').val($(this).data('supplierservicename'));
                $('input[name="Flag"]').val($(this).data('flag')).change();
            }
        });
    </script>
}