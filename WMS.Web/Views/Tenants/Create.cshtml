<div class="modal fade" id="modalTenant" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create New Tenant</h5>
            </div>
            <form enctype="multipart/form-data" method="post" asp-controller="Tenants" asp-action="CreateTenant">
                <input name="masDataTenant.TenantCode" value="Autogenerated" type="hidden" />
                <div class="modal-body m-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-12 col-sm-6">
                            <div class="form-group required">
                                <label class="control-label">Name</label>
                                <input name="Name" class="form-control" />
                                <span class="text-danger field-validation-valid" data-valmsg-for="Name" data-valmsg-replace="true"></span>
                            </div><br />
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="form-group required">
                                <label class="control-label">Email</label>
                                <input name="EmailAddress" class="form-control" />
                                <span class="text-danger field-validation-valid" data-valmsg-for="EmailAddress" data-valmsg-replace="true"></span>
                            </div><br />
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-12 col-sm-6">
                            <div class="form-group required">
                                <label class="control-label">Phone Number</label>
                                <input name="PhoneNumber" class="form-control" />
                                <span class="text-danger field-validation-valid" data-valmsg-for="PhoneNumber" data-valmsg-replace="true"></span>
                            </div><br />
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="form-group required">
                                <label class="control-label">Office Phone</label>
                                <input name="OfficePhone" class="form-control" />
                                <span class="text-danger field-validation-valid" data-valmsg-for="OfficePhone" data-valmsg-replace="true"></span>
                            </div><br />
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-12 col-sm-6">
                            <div class="form-group required">
                                <label class="control-label">Provinsi</label>
                                <select name="ProId" class ="form-control select2" data-bs-toggle="select2" asp-items="ViewBag.ProId" required>
                                    <option selected disabled>Select...</option>
                                </select>
                                <span class="text-danger field-validation-valid" data-valmsg-for="ProId" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="form-group required">
                                <label class="control-label">Kabupaten</label>
                                <select class ="form-control select2" data-bs-toggle="select2" name="KabId" required>
                                    <option selected disabled>Select...</option>
                                </select>
                                <span class="text-danger field-validation-valid" data-valmsg-for="KabId" data-valmsg-replace="true"></span>
                            </div><br />
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-12 col-sm-6">
                            <div class="form-group required">
                                <label class="control-label">Kecamatan</label>
                                <select name="KecId" class="form-control select2" data-bs-toggle="select2" required>
                                    <option selected disabled>Select...</option>
                                </select>
                                <span class="text-danger field-validation-valid" data-valmsg-for="KecId" data-valmsg-replace="true"></span>
                            </div><br />
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="form-group required">
                                <label class="control-label">Kelurahan</label>
                                <select name="KelId" class="form-control select2" data-bs-toggle="select2">
                                    <option disabled selected>Select...</option>
                                </select>
                                <span class="text-danger field-validation-valid" data-valmsg-for="KelId" data-valmsg-replace="true"></span>
                            </div><br />
                        </div>
                    </div>
                    
                    <div class="form-group required">
                        <label class="control-label">Address</label>
                        <textarea rows="2" name="Address" class="form-control" ></textarea>
                        <span class="text-danger field-validation-valid" data-valmsg-for="Address" data-valmsg-replace="true"></span>
                    </div><br />

                    <div class="row">
                        <div class="col-12 col-sm-6">
                            <div class="form-group required">
                                <label class="control-label">KodePos</label>
                                <input name="KodePos" class="form-control" />
                                <span class="text-danger field-validation-valid" data-valmsg-for="KodePos" data-valmsg-replace="true"></span>
                            </div><br />

                            <div class="form-group">
                                <label class="control-label">Avatar</label>
                                <div class="custom-file">
                                    <input name="FormProfileImage" type="file" class="form-control custom-file-input" id="IdFormPhotoProfile"
                                            accept=".png,.jpg,.jpeg" onchange="document.getElementById('idFormProfilePre').src = window.URL.createObjectURL(this.files[0])" />
                                </div>
                                <span class="text-danger field-validation-valid" data-valmsg-for="ZoneCode" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="col-md-12 text-center">
                                <img id="idFormProfilePre" src="/img/tenant/picture128.jpg" alt="logo Image" width="150" height="150" style="border:1px;margin-top:20px" />
                            </div>
                        </div>
                    </div>
                    
                </div>
                <div class="modal-footer align-middle">
                    <input type="submit" value="Save" class="btn btn-primary" /> &nbsp;
                    <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Close</button>
                </div>
            </form>

        </div>
    </div>
</div>